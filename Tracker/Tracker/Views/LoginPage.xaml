<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Entry Placeholder="Username" FontSize="16" x:Name="entryUserName"></Entry>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Entry Placeholder="Password" IsPassword="True" FontSize="16" x:Name="entryUserPassword"></Entry>
                </StackLayout>

                <StackLayout Grid.Row="2">
                    <Button Text="Login" HorizontalOptions="CenterAndExpand" WidthRequest="100" TextColor="Wheat" BackgroundColor="Violet" Clicked="Login_Clicked"></Button>
                </StackLayout>
                <StackLayout Grid.Row="3">
                    <Label Text="Forgotten details?"></Label>
                </StackLayout>
               

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>